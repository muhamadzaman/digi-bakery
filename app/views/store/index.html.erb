<h3>Your Bakery</h3>
<div class="bakery-nav">
  <%= link_to "View your ovens", ovens_path %>
</div>

<br/>
<div class="store-inventory">
  Cookies for sale:
  <ul>
    <% current_user.stored_cookies.group_by(&:fillings).each_pair do |fillings, batch_cookie| %>
      <li>
        <%= pluralize(batch_cookie.count, "Cookie") %>
        with
        <%= fillings || "no filling" %>
      </li>
    <% end %>
  </ul>
</div>
